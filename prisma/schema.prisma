// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Veiculo {
  id Int @id @default(autoincrement())
  marca String
  modelo  String
  precoAluguel  Float
  categoria  String
  status  Boolean
  integridade Boolean
  combustivel Int
}

model Condutor {
  cpf String @unique
  nome String
  idade Int
  dinheiro Int
  alugando Boolean
}